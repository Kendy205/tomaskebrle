---
import BaseHead from '../../components/BaseHead.astro';
import Header from "../../components/Header.astro"
import Navbar from "../../components/Navbar.svelte"
import About from "../../components/About.astro"
import Portfolio from "../../components/Portfolio.astro"
import Contact from "../../components/Contact.astro"
import Blog from "../../components/Blog.astro"
import Footer from "../../components/Footer.astro"
import {Language} from "../../types"
let title = 'Tomáš Kebrle - Student, programátor & web-developer';
let description = 'Ahoj 👋, Jsem programátor, web-developer a web-designér z Louny.';
let permalink = 'https://tomaskebrle.cz/cz';

// let allPosts = await Astro.glob('./posts/*.md');
// allPosts = allPosts.sort((a, b) => new Date(b.frontmatter.publishDate).valueOf() - new Date(a.frontmatter.publishDate).valueOf());

const language:Language = {
  nav : {
    about: "O mně",
    contact : "Kontakt",
    portfolio : "Portfolio",
    blog : "Blog"
  },
  header: {
    name: "Tomáš Kebrle",
    tagline: "Student, programátor & web-developer"
  },
  about: {
    title: "O mně",
    text : "Ahoj 👋, Jsem 16ti letý programátor, web-developer a web-designér z Louny. Zde také studuji na všeobecném Gymnáziu, ale všechny moje znalost jsou ze samouky. Nejvíce dělám s web-technologiemi, ale učím se pracovat i v back-endu, a zajímám se o Linux a Dev-Ops. A také jsem <a href=\"assets/dofe.pdf\" class=\"text-[#666] hover:underline\">držitelem DofE bronzové ceny</a>",
  },
  portfolio: {
    card1: {
      title : "Maturita Book",
      description: "Jednoduchá web-aplikace, kterou jsem vytvořil pro svojí školu. Je to list všech maturitních knížek k maturitě, kde je žáci můžou postupně hodnotit a přidávat komentáře. Stránku jsem vytvořil pomocí Firebase s Firestore a NextJS",
      link: "https://maturita-book.vercel.app",
      image: "/assets/maturita_book.jpg",
      shortlink: "maturita-book.vercel.app"
    },
    card2: {
      title : "My personal website",
      description : "SEO-Přátelská, osobní stránka s blogem a kontaktem. Stránku jsem vytvořil abych se lépe naučil Astro. Nadesignoval jsem jí nejdřiv ve Figmě a poté pomocí TailwindCSS. Blog je hodně technicky zaměřený a proto je pouze v Angličtině, a jako CMS pro něj využívám obyčejný markdown.",
      link: "https://tomaskebrle.cz",
      image: "/assets/osobni_stranka.jpg",
      shortlink: "tomaskebrle.cz"
    }
  },
  contact: "Potřebujete stránku, či web-aplikaci? Převést váš nápad do reality? Neváhejte mně kontaktovat!"
}

---

<html lang="cs-CZ">
	<head>
		<BaseHead {title} {description} {permalink} />
    <script src="https://kit.fontawesome.com/0611ddbb9f.js" crossorigin="anonymous"></script>
  </head>

	<body>
  <style>
      main{
        background-image: linear-gradient(0deg, #031927 35%, rgba(3, 25, 39, 0.85) 100%), url("/assets/bg.jpg");
        background-position: center;
        background-size: cover;
      }
    </style>
    <main class="w-full px-4 lg:px-[16.666667%]">
      <Navbar language={language}/>
      <Header tagline={language.header.tagline}/>
      <About text={language.about.text} title={language.about.title}/>
      <Portfolio portfolio={language.portfolio}/>
      <Contact contact={language.contact}></Contact>
      <Blog/>
    </main>
    <Footer></Footer>
    <script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script is:inline>
      AOS.init({
        duration: 500,
      });
    </script>
	</body>
</html>

